# =================================================================
# Variables d'environnement API FreeFire MVP
# Copier ce fichier vers .env (dev) ou .env.production (prod)
# =================================================================

# Environnement
APP_ENV=development
APP_DEBUG=true

# Base de données PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@db:5432/freefire_mvp

# Stockage MinIO S3-compatible
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minio
S3_SECRET_KEY=minio12345
S3_BUCKET_PROOFS=proofs
S3_REGION=us-east-1

# Sécurité et authentification (CHANGER EN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-me-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
PAYMENTS_HMAC_SECRET=your-hmac-secret-for-webhooks-change-me

# Email SMTP
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@freefire-mvp.local

# Contacts administrateurs
WHATSAPP_ADMIN=+2290151104575
MERCHANT_MTN=+2290151104575
MERCHANT_MOOV=+2290158758820

# Token d'administration (CHANGER EN PRODUCTION!)
ADMIN_TOKEN=admin-secret-token-change-me

# Configuration des paiements
PAYMENT_EXPIRY_MINUTES=30
MAX_UPLOAD_SIZE_MB=10

# Logs et monitoring
LOG_LEVEL=info
SENTRY_DSN=
